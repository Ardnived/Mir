package  {	import flash.geom.Point;	import flash.display.MovieClip;		public class Checkpoint extends MovieClip {		var lastestCheckpoint:Point;				public function Checkpoint() {						// constructor code			this.addEventListener(Event.ADDED_TO_STAGE, onAddedToStage);		}		public function onAddedToStage(event:Event)		{			//remove the intializer			this.removeEventListener(Event.ADDED_TO_STAGE, onAddedToStage);			this.addEventListener(Event.ENTER_FRAME, onTick);		}//end function				public function onTick(event:Event){							if(this.hitTestObject(Game.gameContainer.hero) || 				   Game.inputManager.justCmdPressed(InputManager.INSTANTDEATH) )				{					trace("DIE DIE DIE");					latestCheckpoint = new Point(Game.gameContainer.levelMap.x, Game.gameContainer.levelMap.y);				}		}//end method				public function callCheckpoint(){			Game.gameContainer.levelMap.x = latestCheckpoint.x;			Game.gameContainer.levelMap.y = latestCheckpoint.y;		}	}	}