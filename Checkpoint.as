package  {	import flash.geom.Point;	import flash.display.MovieClip;	import flash.events.Event;		public class Checkpoint extends MovieClip {		 var lastestCheckpoint:Point = new Point();				public function Checkpoint() {						// constructor code			this.addEventListener(Event.ADDED_TO_STAGE, onAddedToStage);		}		public function onAddedToStage(event:Event)		{			 			//remove the intializer			this.removeEventListener(Event.ADDED_TO_STAGE, onAddedToStage);			this.addEventListener(Event.ENTER_FRAME, onTick);		}//end function				public function onTick(event:Event)		{				if(Game.inputManager.justCmdPressed(InputManager.INSTANTDEATH))				{					callCheckpoint();			    }							if(this.hitTestObject(Game.gameContainer.hero)  )				{					trace("Check");					lastestCheckpoint.x = Game.gameContainer.scrollX;					lastestCheckpoint.y = Game.gameContainer.scrollY;				}		}//end method				public function callCheckpoint(){			Game.gameContainer.set(lastestCheckpoint.x,lastestCheckpoint.y);		}	}	}