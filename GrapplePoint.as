﻿package {	import flash.events.Event;	import flash.geom.Point;	public class GrapplePoint extends GrappleItem	{		var ourMousePoint:Point;		public function GrapplePoint()		{			// constructor code			this.addEventListener(Event.ENTER_FRAME,onTick);		}		function onTick(event:Event)		{			if (this.hitTestObject(Game.gameContainer.hook) && !Game.gameContainer.hook.isHit)			{				if (this.hitTestPoint(Game.inputManager.mousePos.x,Game.inputManager.mousePos.y)){					Game.sound.playSound(new Array(SoundManager.MIR_GRAP_HIT_01, SoundManager.MIR_GRAP_HIT_02, SoundManager.MIR_GRAP_HIT_03), SoundManager.EFFECT);										ourMousePoint = Game.inputManager.mousePos;					Game.gameContainer.move(ourMousePoint.x - Game.gameContainer.hero.x,										   ourMousePoint.y - Game.gameContainer.hero.y);				}							}		}	}}